<html lang="en" class="light-mode">

  <head>
    <title>Shetkari Gram Vikas Admin</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="style.css" />
  </head>

  <body>
    <header class="page-header">
      <nav>
        <img src="../images/cabbage.png" alt="logo" width="200" height="100" />
        <button
          class="toggle-mob-menu"
          aria-expanded="false"
          aria-label="open menu"
        >
          <img
            src="../images/Bell-peppers.jpg"
            alt="logo"
            width="25"
            height="25"
          />
        </button>
        <ul class="admin-menu">
          <li class="menu-heading">
            <h3>Admin</h3>
          </li>
          <li>
            <a href="#0">
              <img
                src="../images/beetroot.jpg"
                width="25"
                height="15"
                alt="betroot"
              />
              <span>Add Pages</span>
            </a>
          </li>
          <li>
            <a href="#0">
              <img
                src="../images/beetroot.jpg"
                width="25"
                height="15"
                alt="betroot"
              />
              <span>Trending</span>
            </a>
          </li>
          <li>
            <a href="#0">
              <img
                src="../images/beetroot.jpg"
                width="25"
                height="15"
                alt="betroot"
              />
              <span>Graph</span>
            </a>
          </li>
          <li>
            <a href="#0">
              <img
                src="../images/beetroot.jpg"
                width="25"
                height="15"
                alt="betroot"
              />
              <span>Graph</span>
            </a>
          </li>
        </ul>
        <ul class="admin-menu">
          <li class="menu-heading">
            <h3>Settings</h3>
          </li>
          <li>
            <a href="#0">
              <img
                src="../images/beetroot.jpg"
                width="25"
                height="15"
                alt="betroot"
              />
              <span>Pages</span>
            </a>
          </li>
          <li>
            <a href="#0">
              <img
                src="../images/beetroot.jpg"
                width="25"
                height="15"
                alt="betroot"
              />
              <span>Charts</span>
            </a>
          </li>

        </ul>
      </nav>
    </header>
    <section class="page-content">
      <section class="search-and-user">
        <form>
          <input type="search" placeholder="Search Pages..." />
          <button type="submit" aria-label="submit form">
            <img
              src="../images/beetroot.jpg"
              width="15"
              height="15"
              alt="search"
            />
          </button>
        </form>
        <div class="admin-profile">
          <span class="greeting">Hello Admin!</span>
          <div class="notifications">
            <span class="badge">.</span>
            <img
              src="../images/beetroot.jpg"
              alt="logo"
              width="25"
              height="25"
            />
          </div>
        </div>
      </section>

      <section class="container">
        <table class="table table-striped">
          <thead>
            <tr>
              <td>Name</td>
              <td>Price</td>
              <td>Category</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody>
            {{#each foodItems}}
              <tr>
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
                <td>{{this.category.title}}</td>
                <td>
                  <button class="btn btn-success">View</button>
                  <button class="btn btn-primary">Edit</button>
                  <button class="btn btn-danger">Delete</button>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </section>
    </section>
    <script
      src="https://code.jquery.com/jquery-3.6.0.js"
      integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
    ></script>
  </body>

</html>